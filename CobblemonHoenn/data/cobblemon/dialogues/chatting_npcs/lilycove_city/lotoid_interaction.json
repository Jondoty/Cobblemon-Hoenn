                            "q.run_command('execute as ' + q.player.username + ' if entity @s[scores={rng=..40}] run opendialogue lotoid_nothing @s');",
                            "q.run_command('execute as ' + q.player.username + ' if entity @s[scores={rng=41..44}] run opendialogue lotoid_masterball @s');",
                            "q.run_command('execute as ' + q.player.username + ' if entity @s[scores={rng=45..54}] run opendialogue lotoid_rarecandy @s');",
                            "q.run_command('execute as ' + q.player.username + ' if entity @s[scores={rng=55..74}] run opendialogue lotoid_ppmax @s');",
                            "q.run_command('execute as ' + q.player.username + ' if entity @s[scores={rng=75..99}] run opendialogue lotoid_ppup @s');",
                            "q.run_command('execute as ' + q.player.username + ' if entity @s[scores={rng=100..}] run opendialogue lotoid_hyperpotion @s');"
