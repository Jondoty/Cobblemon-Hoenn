{
    "speakers": {
        "npc": {
            "name": "Music Lady",
            "face": {
                "type": "artificial",
                "modelType": "npc",
                "identifier": "cobblemon:parasollady",
                "isLeftSide": true
            }
        }
    },
    "pages": [
        {
            "id": "greeting",
            "speaker": "npc",
            "lines": [
                "Hello! Would you like to change the music and enjoy a different atmosphere?"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Yes",
                        "value": "yes",
                        "action": [
                          "q.run_command('scoreboard players add @e[x=-2070,y=64,z=1410,dy=3] MusicCooldown 1');",
                          "q.run_command('scoreboard players set @e[x=-2070,y=64,z=1410,dy=3,scores={MusicCooldown=5..}] MusicCooldown 0');",
                          "q.run_command('stopsound @a[x=2071,y=0,z=323,dx=663,dy=256,dz=906,scores={MusicCooldown=1..}] record');",
                          "q.run_command('scoreboard players set @a[x=2071,y=0,z=323,dx=663,dy=256,dz=906,scores={MusicCooldown=1..}] MusicCooldown 0');",
                          "q.dialogue.set_page('page2');"
                        ]
                    },
                    {
                        "text": "No",
                        "value": "no",
                        "action": "q.dialogue.set_page('page4');"
                    }
                ]
            }
        },
        {
            "id": "page2",
            "speaker": "npc",
            "lines": [
                "Did you like it?"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": "q.dialogue.set_page('page3');"
                    }
                ]
            }
        },
        {
            "id": "page3",
            "speaker": "npc",
            "lines": [
                "If you want to change the music again, let me know!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Close",
                        "value": "close",
                        "action": [
                            "q.dialogue.close();"
                        ]
                    }
                ]
            }
        },
        {
            "id": "page4",
            "speaker": "npc",
            "lines": [
                "Acknowledged. "
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": "q.dialogue.set_page('page5');"
                    }
                ]
            }
        },
        {
            "id": "page5",
            "speaker": "npc",
            "lines": [
                "I can change the music anytime, so whenever you feel like it, let me know."
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Close",
                        "value": "close",
                        "action": [
                            "q.dialogue.close();"
                        ]
                    }
                ]
            }
        }
    ]
}