{   
    "speakers": {
        "npc": {
      "name": "Rydel",
      "face": {
        "type": "artificial",
        "modelType": "npc",
        "identifier": "cobblemon:oldman",
        "isLeftSide": true
      }
    },
        "player": {
            "face": "q.player.face(true);",
            "name": {
                "type": "expression",
                "expression": "q.player.username"
            }
        }
      },
    "pages": [
        {
            "id": "greeting",
            "speaker": "npc",
            "lines": [
                "Oh? Were you thinking about switching Bikes?"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Yes",
                        "value": "yes",
                        "action": "q.dialogue.set_page('page2');"
                    },
                    {
                        "text": "No",
                        "value": "no",
                        "action": "q.dialogue.set_page('leave');"
                    }
                ]
            }
        },
        {
            "id": "page2",
            "speaker": "player",
            "lines": [
                {
                    "type": "expression",
                    "expression": "'' + q.player.username + ' got the Mach Bike exchanged for an Acro Bike.';"
                }
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": [
                            "q.run_command('execute as ' + q.player.username + ' run playsound minecraft:keyitem ambient @s ~ ~ ~ 1 1 1');",
                            "q.run_command('execute as ' + q.player.username + ' run clear @s minecraft:carrot_on_a_stick[custom_model_data=4]');",
                            "q.run_command('execute as ' + q.player.username + ' run function hoenn:spawn/mach_bike');",
                            "q.dialogue.set_page('page3');"
                        ]
                    }
                ]
            }
        },
        {
            "id": "page3",
            "speaker": "npc",
            "lines": [
                "If you get the urge to switch Bikes, just come see me!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Close",
                        "value": "close",
                        "action": [
                            "q.dialogue.close();"
                            ]
                    }
                ]
            }
        },

        {
            "id": "leave",
            "speaker": "npc",
            "lines": [
                "Good, good! I'm happy you like it!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Close",
                        "value": "close",
                        "action": [
                            "q.dialogue.close();"
                            ]
                    }
                ]
            }
        }
        ]
