{   
    "initializationAction": [
    "q.run_command('tag ' + q.player.username + ' add InDialogue');"
    ],
    "speakers": {
        "player": {
         "face": "q.player.face(true);",
         "name": {
        "type": "expression",
        "expression": "q.player.username"
      }
    }
      },
    "pages": [
        {
            "id": "greeting",
            "speaker": "player",
            "lines": [
                "There's a huge gap in the sky."
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": "q.dialogue.set_page('page2');"
                    }
                ]
            }
        },
        {
            "id": "page2",
            "speaker": "player",
            "lines": [
                "The space surrounding the gap is distorted, as if it had somehow been twisted..."
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": "q.dialogue.set_page('page3');"
                    }
                ]
            }
        },
        {
            "id": "page3",
            "speaker": "player",
            "lines": [
                "Do you want to fly into the gap?"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Yes",
                        "value": "yes",
                        "action": [
                            "q.run_command('execute as ' + q.player.username + ' run playsound cobblemon:pokemon.palkia.cry ambient @s ~ ~ ~ 1 1 1');",
                            "q.dialogue.set_page('page4');"
                        ]
                    },
                    {
                        "text": "No",
                        "value": "no",
                        "action": [
                            "q.run_command('execute as ' + q.player.username + ' at @s run tp @s ~ ~ ~-15');",
                            "q.run_command('tag ' + q.player.username + ' remove InDialogue');",
                            "q.dialogue.close();"
                        ]
                    }
                ]
            }
        },
        {
            "id": "page4",
            "speaker": "player",
            "lines": [
                "Palkia appeared!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Close",
                        "value": "close",
                        "action": [
                            "q.run_command('execute as ' + q.player.username + ' at @s run tp @s ~ 203 ~');",
                            "q.run_command('execute as ' + q.player.username + ' run gamemode adventure @s');",
                            "q.run_command('execute as ' + q.player.username + ' at @s run pokespawnat ~ ~ ~ palkia level=50 moves=earthpower,aurasphere,spacialrend,hydropump');",
                            "q.run_command('tag ' + q.player.username + ' add PalkiaEncounter');",
                            "q.run_command('tag ' + q.player.username + ' remove InDialogue');",
                            "q.dialogue.close();"
                            ]
                    }
                ]
            }
        }
        ]
    }