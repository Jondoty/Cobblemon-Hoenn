            "speaker": "npc",
            "lines": [
                "You'd like to purchase a Protein for $9800?"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "isSelectable": "q.player.has_tag('MoneyHave9800')",
                        "text": "Buy x1",
                        "value": "buy1",
                        "action": [
                            "q.run_command('execute as ' + q.player.username + ' run give @s cobblemon:protein 1');",
                            "q.run_command('execute as ' + q.player.username + ' run playsound minecraft:entity.experience_orb.pickup ambient @s ~ ~ ~ 1 1 1');",
