{
    "initializationAction": [
        "q.run_command('scoreboard players set ' + q.player.username + ' BattleStart 13');",
        "q.run_command('execute as ' + q.player.username + ' run function hoenn:triggers/stopsound');"
    ],
    "escapeAction": [
        "q.run_command('scoreboard players set ' + q.player.username + ' BattleStart 0');",
        "q.run_command('execute as ' + q.player.username + ' run function hoenn:triggers/stopsound');",
        "q.dialogue.close();"
    ],
    "speakers": {
        "npc": {
            "name": {
                "type": "expression",
                "expression": "q.npc.name"
            },
            "face": "q.npc.face();"
        }
    },
    "pages": [
        {
            "id": "greeting",
            "speaker": "npc",
            "lines": [
                "Ahya. Are you one of my fans?"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": "q.dialogue.set_page('page2');"
                    }
                ]
            }
        },
        {
            "id": "page2",
            "speaker": "npc",
            "lines": [
                "You're that same kid who's always popping up!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": "q.dialogue.set_page('page3');"
                    }
                ]
            }
        },
        {
            "id": "page3",
            "speaker": "npc",
            "lines": [
                "I can't believe you're even following me around in my private life."
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": "q.dialogue.set_page('page4');"
                    }
                ]
            }
        },
        {
            "id": "page4",
            "speaker": "npc",
            "lines": [
                "Ahyahya! Well, that's all right!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": "q.dialogue.set_page('page5');"
                    }
                ]
            }
        },
        {
            "id": "page5",
            "speaker": "npc",
            "lines": [
                "Maybe I'll just clear up this intensely unpleasant feeling I have welling up inside of me..."
