{
    "initializationAction": [
        "q.run_command('scoreboard players set ' + q.player.username + ' BattleStart 2');",
        "q.run_command('execute as ' + q.player.username + ' run function hoenn:triggers/stopsound');"
    ],
    "escapeAction": [
        "q.run_command('scoreboard players set ' + q.player.username + ' BattleStart 0');",
        "q.run_command('execute as ' + q.player.username + ' run function hoenn:triggers/stopsound');",
        "q.dialogue.close();"
    ],
    "speakers": {
        "npc": {
            "name": {
                "type": "expression",
                "expression": "q.npc.name"
            },
            "face": "q.npc.face();"
        }
    },
    "pages": [
        {
            "id": "greeting",
            "speaker": "npc",
            "lines": [
                "Oh, I've been waitin' for you!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": "q.dialogue.set_page('page2');"
                    }
                ]
            }
        },
        {
            "id": "page2",
            "speaker": "npc",
            "lines": [
                "My Pok√©mon and I are going to show you everything we've got!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": "q.dialogue.set_page('page3');"
                    }
                ]
            }
        },
        {
