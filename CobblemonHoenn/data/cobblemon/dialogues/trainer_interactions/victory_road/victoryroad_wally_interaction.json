{
    "initializationAction": [
        "q.run_command('execute as ' + q.player.username + ' if entity @s[tag=!RadioOff] run stopsound @s record');",
        "q.run_command('execute as ' + q.player.username + ' if entity @s[tag=!RadioOff] run playsound minecraft:apathweallmustwalk record @s ~ ~ ~ 1 1 1');",
        "q.run_command('execute as ' + q.player.username + ' if entity @s[tag=!RadioOff] run scoreboard players set @s MusicCooldown 116');"
    ],
    "escapeAction": [
        "q.run_command('scoreboard players set ' + q.player.username + ' BattleStart 0');",
        "q.run_command('execute as ' + q.player.username + ' run function hoenn:triggers/stopsound');",
        "q.dialogue.close();"
    ],
    "names": [
        "Wally"
    ],
    "speakers": {
        "wally": {
            "name": {
                "type": "expression",
                "expression": "q.npc.name"
